{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--inspect-brk",
                "--colors",
                "${workspaceFolder}/tests/**/*_spec.js"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Currently open Mocha Test",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--inspect-brk",
                "--colors",
                "${file}"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node-Red Debugging environment",
            "program": "${workspaceRoot}/node_modules/node-red/red.js",
            "args": [
                "--userDir", "${workspaceRoot}/tmp",
                "--port", "1880",
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "devbuild"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node-Red Nodemon",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "devlaunch"]
        }
    ]
}